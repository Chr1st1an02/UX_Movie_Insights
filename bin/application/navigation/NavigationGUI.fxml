<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Tooltip?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.navigation.NavigationController">
   <right>
  		<HBox>
     <JFXButton id="vorgemerkt" mnemonicParsing="false" style="-jfx-button-type: RAISED;" onAction="#onVorgemerktClicked" styleClass="menuIcon" BorderPane.alignment="CENTER">
     	<graphic>
            <ImageView fitHeight="29.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-to-do-100.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="DeadEnd für die vorgemerkte Liste" />
         </tooltip>
     </JFXButton>
     <JFXButton id="einstellungen" mnemonicParsing="false" style="-jfx-button-type: RAISED;" styleClass="menuIcon" BorderPane.alignment="CENTER">
     	<graphic>
            <ImageView fitHeight="29.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-services-208.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="DeadEnd für die Einstellungen" />
         </tooltip>
     </JFXButton>
     </HBox>
     
   </right>
   <left>
     <JFXButton mnemonicParsing="false" onAction="#onMenuClicked" style="-jfx-button-type: RAISED;" styleClass="menuIcon" BorderPane.alignment="CENTER">
     <graphic>
            <ImageView fitHeight="29.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/icons8-menu-96.png" />
               </image>
            </ImageView>
         </graphic>
         <tooltip>
            <Tooltip text="Menu" />
         </tooltip>
     </JFXButton>
   </left>
   <center>
      <Label style="-fx-text-fill: #6B6E70;" text="MovieInsight" BorderPane.alignment="CENTER">
         <font>
            <Font name="Gill Sans Ultra Bold" size="18.0" />
         </font>
      </Label>
   </center>
</BorderPane>
